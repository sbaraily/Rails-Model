<fieldset> 
<legend><h1><%= @person.id ? "Edit Person" : "Create Person" %></h1></legend>

<%= form_for @person do |f| %>
    &nbsp;<%= f.label :name %><br>
    <%= f.text_field :name, required: true %><br><br>

    &nbsp;<%= f.label :age %><br>
    <%= f.text_field :age, required: true %><br><br>

    &nbsp;<%= f.label :hair_color %><br>
    <%= f.text_field :hair_color %><br><br>

    &nbsp;<%= f.label :eye_color %><br>
    <%= f.text_field :eye_color %><br><br>

    &nbsp;<%= f.label :gender %><br>
    &emsp;<%= f.radio_button :gender, 'male' %> Male &emsp;
    <%= f.radio_button :gender, 'female' %> Female &emsp;
    <%= f.radio_button :gender, 'other' %> Other <br><br>

    &nbsp;<%= f.label :alive %><br>
    &emsp;<%= f.radio_button :alive, 'yes' %> Yes &emsp;
    &emsp;<%= f.radio_button :alive, 'no' %> No<br><br>

    <%= f.submit %>
<% end %>
</fieldset>

<style>
legend{
    text-align: center;
    color: #4CAF50;
}
fieldset{
    width: 50%;
    font-size: 20px;
    background-color: #f2f2f2;
}
input[type=text]{
    width: 500px;
    padding: 12px 20px;
    margin 8px 0px;
    display: inline-block;
    border: 1px solid #ccc;
    border-radius: 4px;
    box-sizing: border-box;
}

input[type=submit] {
    width: 500px;
    background-color: #4CAF50;
    color: white;
    padding: 14px 20px;
    margin: 8px 0;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 20px;
    font-weight: bold;
</style>